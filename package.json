    "auto-launch": "^5.0.6",
    "axios": "^1.6.8",
    "bn.js": "^5.2.1",
    "classic-level": "1.2.0",
    "classnames": "^2.3.1",
    "compare-versions": "^6.0.0-rc.1",
    "crc": "^4.1.1",
    "discord-rich-presence-typescript": "^0.0.8",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1",
    "embla-carousel-autoplay": ">=7.0.0",
    "embla-carousel-react": ">=7.0.0",
    "ethers": "^6.9.0",
