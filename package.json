    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-blockies": "^1.4.1",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.9.0",
    "recharts": "^2.4.3",
    "sanitize-filename": "^1.6.3",
    "semver": "^7.5.1",
    "shlex": "^2.1.2",
    "short-uuid": "^4.2.0",
    "simple-keyboard": "^3.4.136",
    "source-map-support": "^0.5.21",
    "steam-shortcut-editor": "^3.1.1",
    "stream": "^0.0.2",
